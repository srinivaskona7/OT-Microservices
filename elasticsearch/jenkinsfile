pipeline {
  agent {
    docker {
      image 'sriniv7654/ultimate-cicd:docker'
      args '--user root -v /var/run/docker.sock:/var/run/docker.sock' // mount Docker socket to access the host's Docker daemon
    }
  }
  stages {
    stage('Checkout') {
      steps {
        sh 'echo passed'
        // git branch: 'main', url: 'https://github.com/srinivaskona7/OT-Microservices.git'
      }
    }
    stage('Build and Push Docker Image') {
      environment {
        DOCKER_IMAGE = "sriniv7654/ot-elastic:${BUILD_NUMBER}"
        // DOCKERFILE_LOCATION = "elasticsearch/Dockerfile"
        REGISTRY_CREDENTIALS = credentials('docker-cred')
      }
      steps {
        script {
            sh 'cd elasticsearch && docker build -t ${DOCKER_IMAGE} .'
            def dockerImage = docker.image("${DOCKER_IMAGE}")
            docker.withRegistry('https://index.docker.io/v1/', "docker-cred") {
                dockerImage.push()
            }
        }
      }
    }
    stage('Update Deployment File') {
        environment {
            GIT_REPO_NAME = "OT-Microservices"
            GIT_USER_NAME = "srinivaskona7"
        }
        steps {
            withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                sh '''
                    git config user.email "srinivas-kona@gmail.com"
                    git config user.name "Srinivas Kona"
                    BUILD_NUMBER=${BUILD_NUMBER}
                    sed -i "s|\\(image: .*:\\)[0-9a-zA-Z_-]*|\\1${BUILD_NUMBER}|" elasticsearch/manifests/deployment.yml
                    git add attendance/manifests/deployment.yml
                    git commit -am "Update deployment image to version ${BUILD_NUMBER}"
                    git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:master
                '''
            }
        }
    }
  }
}

